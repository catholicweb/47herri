{%- assign all_events = "" | split: "" -%}
{% for page in site.pages %}
  {% if page.masses %}
	{% assign day = text | replace_regex: '^(astelehenan?|asteartean?|asteazkenan?|ostegunan?|ostiralan?|larunbatan?|igandean?|astegunetan?|bezperan?).*', '\1' %}
	{% assign time = text | replace_regex: '.*?([0-9]|0[0-9]|1[0-9]|2[0-3])[:.]([0-5][0-9]).*', '\1:\2' %}
	{% assign week_number = text | replace_regex: '.*?([12345]).? ?astek?o?a.*', '\1' %}
	{% assign month = text | replace_regex: '.*?(pazkoa|urtarrila?k?|otsaila?k?|martxoa?k?|apirila?k?|maiatza?k?|ekaina?k?|uztaila?k?|abuztua?k?|iraila?k?|urria?k?|azaroa?k?|abendua?k?).*', '\1' %}
	{% assign frequency = text | replace_regex: '.*?([1-9]) (astea?n?|hilea?n?|urtea?n?) behin.*', '\1 \2 behin' %}
	{% assign frequency_number = frequency | split: ' ' | first %}
	{% assign frequency_period = frequency | split: ' ' | last %}
	{% assign schedule = '{ "day": "' | append: day | append: '", "time": "' | append: time | append: '", "week_number": "' | append: week_number | append: '", "month": "' | append: month | append: '", "frequency_number": "' | append: frequency_number | append: '", "frequency_period": "' | append: frequency_period | append: '" }' %}
	{{ schedule }}
    {% assign all_events = all_events | concat: page.events %}
  {% endif %}
{%- endfor -%}


