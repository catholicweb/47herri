---
layout: null
---
{%- assign subfields = "mezak|hiletak|ekitaldi|aitortzaren" | split: "|" -%}
{%- assign bydays = "astelehena|asteartea|asteazkena|osteguna|ostirala|larunbat|igandea|asteguneta|bezpera" | split: "|" -%}
{%- assign byweek = "1. astea|2. astea|3. astea|4. astea|5. astea" | split: "|" -%}
{%- assign times = "00:00|00:30|01:00|01:30|02:00|02:30|03:00|03:30|04:00|04:30|05:00|05:30|06:00|06:30|07:00|07:30|08:00|08:30|09:00|09:30|10:00|10:30|11:00|11:30|12:00|12:30|13:00|13:30|14:00|14:30|15:00|15:30|16:00|16:30|17:00|17:30|18:00|18:30|19:00|19:30|20:00|20:30|21:00|21:30|22:00|22:30|23:00|23:30" | split: "|" -%}
{%- assign bymonth = "pazkoa|urtarrila|otsaila|martxoa|apirila|maiatza|ekaina|uztaila|abuztua|iraila|urria|azaroa|abendua" | split: "|" -%}
[
{%- assign all_events = "" | split: "" -%}
{%- for page in site.pages -%}
{%- assign location = page.title | default: page.name | capitalize | replace: ".md", "" -%}
{%- for subfield in subfields -%}
{%- assign items = page[subfield] -%}
{%- if items -%}
{%- for item in items -%}
{%- if item.date -%}
{
{%- assign date_dots = item.date | replace: '.' , ':' -%}
"raw": "{{ item.date }}",
"byday": {% include brute_regex string=item.date substrings=bydays %},
"times": {% include brute_regex string=date_dots substrings=times %},
"byweek": {% include brute_regex string=item.date substrings=byweek %},
"bymonth": {% include brute_regex string=item.date substrings=bymonth %},
"dates": {% include match_date string=item.date %},
"type": "{{ item.type | default: subfield }}",
{%- if subfield == 'hiletak' -%}
"notes": "{{ item.notes | default: 'Jauna, zure eskuetan uzten dugu maite duguna, eman iezaiozu betiko atsedenaldia, eta betiereko argiak argi diezaion. Goian bego. Amen.' }}",
"image": "{{ item.image | default: '/media/hiletak.webp' }}",
{%- else -%}
"notes": "{{ item.notes }}",
"image": "{{ item.image }}",
{%- endif -%}
"title": "{{ item.title }}",
"location": "{{ item.location | default: location }}"
},
{%- endif -%}
{%- endfor -%}
{%- endif -%}
{%- endfor -%}
{%- endfor -%}
{}]